{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./srcts/global.d.ts",
      "./node_modules/@types"
    ],
    "paths": {
      "srcts/*": ["./srcts/*"]
    },
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
  